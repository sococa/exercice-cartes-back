{% extends "base.html.twig" %}

{% block body %}
    <div class="container">

        <h1 class="mt-4">Modification de la carte</h1>
        <p><em>Cocher "Delete" avant dd'upload une nouvelle carte</em></p>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                {% if form_errors(form.nom) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.nom) }}
                </div>
                {% endif %}
            </div>
            {{ form_row(form.imageFile) }}

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {% if form_errors(form.description) %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.description) }}
                </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(form.chiffre) }}
                {{ form_widget(form.chiffre) }}
                {% if form_errors(form.chiffre) %}
                <div class="form-error">
                    {{ form_errors(form.chiffre) }}
                </div>
                {% endif %}
            </div>

	    {{ form_end(form) }}

    </div>
{% endblock %}